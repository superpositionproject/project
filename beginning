<h3><center><strong>Reducing your Carbon Footprint</strong></center></h3>

<p id="end">There are steps you can take to reduce your carbon footprint! Here are some ways you can do that.</p>

<p id="plan" style = "font-family: "Bitter";"></p>


<script>

function calculateCarbon() {
    var points = 0;
    var plan = ["Live with more people", "Live in a smaller home", "Eat less meat", 
    "Reduce water consumption", "Purchase less new electronics or but more secondhand ones", 
    "Reduce your trash", "Recycle more", "Use your personal vehicle less","Use public transportation less"];
    var you_plan = [];
    var selectTag = document.getElementById('people');
    var people = selectTag.options[selectTag.selectedIndex].value
    if (people == "0") {
        points += 14;
        you_plan.push(plan[0]);
    } else if (people == "1") {
        points += 12;
        you_plan.push(plan[0]);
    } else if (people == "2") {
        points += 10;
    } else if (people == "3") {
        points += 8;
    } else if (people == "4") {
        points += 6;
    } else if (people == "5") {
        points += 4;
    } else if (people =="6") {
        points += 2;
    } else {
        points -=300
    }
    var selectTag = document.getElementById('home');
    var home = selectTag.options[selectTag.selectedIndex].value
    if (home == "large") {
        points += 10;
        you_plan.push(plan[1]);
    } else if (home == "medium") {
        points += 7;
        you_plan.push(plan[1]);
    } else if (home == "small") {
        points += 4;
    } else if (home == "apartment") {
        points += 2;
    } else {
        points -=300
    }
    var selectTag = document.getElementById('meat');
    var meat = selectTag.options[selectTag.selectedIndex].value
    if (meat == "daily") {
        points += 16;
        you_plan.push(plan[2]);
    } else if (meat == "few") {
        points += 14;
        you_plan.push(plan[2]);
    } else if (meat == "veggie") {
        points += 10;
    } else if (meat == "vegan") {
        points += 10;
    } else {
        points -=300
    }
    var selectTag = document.getElementById('water');
    var water = selectTag.options[selectTag.selectedIndex].value
    if (water == "most") {
        points += 6;
        you_plan.push(plan[3]);
    } else if (water == "more") {
        points += 4;
        you_plan.push(plan[3]);
    } else if (water == "less") {
        points += 2;
    } else if (water == "none") {
        points += 0;
    } else {
        points -=300
    }
    var selectTag = document.getElementById('purchase');
    var purchase = selectTag.options[selectTag.selectedIndex].value
    if (purchase == "most") {
        points += 10;
        you_plan.push(plan[4]);
    } else if (purchase == "more") {
        points += 8;
        you_plan.push(plan[4]);
    } else if (purchase == "less") {
        points += 6;
        you_plan.push(plan[4]);
    } else if (purchase == "least") {
        points += 4;
    } else if (purchase == "none") {
        points += 2;
    } else {
        points -=300
    }
    var selectTag = document.getElementById('waste');
    var waste = selectTag.options[selectTag.selectedIndex].value
    if (waste == "most") {
        points += 50;
        you_plan.push(plan[5]);
    } else if (waste == "more") {
        points += 40;
        you_plan.push(plan[5]);
    } else if (waste == "less") {
        points += 30;
        you_plan.push(plan[5]);
    } else if (waste == "least") {
        points += 20;
    } else if (waste == "none") {
        points += 5;
    } else {
        points -=300
    }
    var selectTag = document.getElementById('recycle');
    var recycle = selectTag.options[selectTag.selectedIndex].value
    if (recycle == "yes") {
        points += 24;
    } else if (recycle == "default") {
        points -=300
    } else {
        you_plan.push(plan[6]);
    }
    var selectTag = document.getElementById('car');
    var car = selectTag.options[selectTag.selectedIndex].value
    if (car == "most") {
        points += 12;
        you_plan.push(plan[7]);
    } else if (car == "more") {
        points += 10;
        you_plan.push(plan[7]);
    } else if (car == "less") {
        points += 6;
    } else if (car == "least") {
        points += 4;
    } else if (car =="default") {
        points -=300
    }
    var selectTag = document.getElementById('public');
    var public = selectTag.options[selectTag.selectedIndex].value
    if (public == "most") {
        points += 12;
        you_plan.push(plan[8]);
    } else if (public == "more") {
        points += 10;
        you_plan.push(plan[8]);
    } else if (public == "less") {
        points += 6;
        you_plan.push(plan[8]);
    } else if (public == "least") {
        points += 4;
    } else if (public == "little") {
        points += 2;
    } else if (public == "default"){
        points -=300
    }
    
    if (points < 0) {
        var cf = "Please choose all answers to calculate your carbon footprint"
    } else if (points < 60) {
        var cf = "Your carbon footprint is low, but you can always reduce it. Read the following for some ways to do this!" 
    } else if (points > 60) {
        var cf = "Your carbon footprint is quite high. Read the following for some ways to reduce it!"
    } 
    document.getElementById("demo").innerHTML = cf;

    if (you_plan.length < 1) {
        text = "<ul>";
        plan.forEach(getPlan);
        text += "</ul>";
        document.getElementById("plan").innerHTML = text;
        function getPlan(value) {
            text += "<li>" + value + "</li>";
        } 
    } else {
        text = "<ul>";
        you_plan.forEach(getPlan);
        text += "</ul>";
        document.getElementById("plan").innerHTML = text;
        function getPlan(value) {
            text += "<li>" + value + "</li>"; 
        }
    }
}

</script>

